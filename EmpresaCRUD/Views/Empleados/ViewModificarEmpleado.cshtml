@section css
{
	@Styles.Render("~/Content/myStyleSheet.css")
}


@model EmpresaCRUD.Models.consultarEmpleado_Result

<input type="hidden" id="idEmpleado" value="@Model.idEmpleado" />
<input type="hidden" id="generoPredeterminado" value="@Model.generoEmpleado" />
<input type="hidden" id="fechaPredeterminado" value="@Model.fechaContratacionEmpleado" />
<input type="hidden" id="estadoPredeterminado" value="@Model.estadoEmpleado" />
<input type="hidden" id="puestoPredeterminado" value="@Model.idPuesto" />


<div class="container">
	<div class="center">
		<form id="formModificarEmpleado" class="form">
			<div class="form-group">
				<h1>Modificar empleado</h1>
			</div>

			<div class="form-group row">
				<label for="nombreEmpleado" class="col-sm-2 col-form-label">Nombre:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="nombreEmpleado" name="nombreEmpleado" placeholder="Ingresa el nombre" value="@Model.nombreEmpleado" />
				</div>
			</div>

			<div class="form-group row">
				<label for="apellidosEmpleado" class="col-sm-2 col-form-label">Apellidos:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="apellidosEmpleado" name="apellidosEmpleado" placeholder="Ingresa los apellidos" value="@Model.apellidosEmpleado" />
				</div>
			</div>

			<div class="form-group row">
				<label for="cedulaEmpleado" class="col-sm-2 col-form-label">Cédula:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="cedulaEmpleado" name="cedulaEmpleado" placeholder="Ingresa la cédula" value="@Model.cedulaEmpleado" />
				</div>
			</div>

			<div class="form-group row">
				<label for="generoEmpleado" class="col-sm-2 col-form-label">Género:</label>
				<div class="col-sm-10">
					<select class="form-control" id="generoEmpleado" name="generoEmpleado">
						<option disabled selected hidden>Seleccione el género</option>
						<option value="Masculino">Masculino</option>
						<option value="Femenino">Femenino</option>
						<option value="Otro">Otro</option>
					</select>
				</div>
			</div>

			<div class="form-group row">
				<label for="fechaContratacionEmpleado" class="col-sm-2 col-form-label">Fecha contratación:</label>
				<div class="col-sm-10">
					<input type="text" class="form-control" id="fechaContratacionEmpleado" name="fechaContratacionEmpleado" />
				</div>
			</div>

			<div class="form-group row">
				<label for="direccionEmpleado" class="col-sm-2 col-form-label">Dirección:</label>
				<div class="col-sm-10">
					<textarea class="form-control" id="direccionEmpleado" name="direccionEmpleado" placeholder="Ingresa la dirección" rows="3">@Model.direccionEmpleado</textarea>
				</div>
			</div>

			<div class="form-group row">
				<label class="col-sm-2 col-form-label">Estado:</label>
				<div class="col-sm-10">
					<div class="form-check form-check-inline">
						<input class="form-check-input" type="radio" name="estadoEmpleado" id="estadoEmpleado1" value="true" />
						<label class="form-check-label" for="estadoEmpleado1">Activo</label>

						<input class="form-check-input" type="radio" name="estadoEmpleado" id="estadoEmpleado2" value="false" />
						<label class="form-check-label" for="estadoEmpleado2">Inactivo</label>
					</div>
				</div>
			</div>

			<div class="form-group row">
				<label for="nombrePuesto" class="col-sm-2 col-form-label">Puesto:</label>
				<div class="col-sm-10">
					<select class="form-control" id="nombrePuesto" name="nombrePuesto"></select>
				</div>
			</div>

			<input class="btn btn-warning" type="button" id="btnModificar" value="Modificar" />
		</form>
	</div>
</div>

	@section scripts{
		<script src="~/Scripts/Empleados/ViewModificarEmpleado.js"></script>
	}
